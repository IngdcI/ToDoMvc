@model Status
<div class="justify-content-center d-flex">
    <form method ="post"class="col-6">
        <div class="card">
            <div class="card-header bg-warning text-center bg-gradient">Yeni Durum Ekleme Formu</div>
            <div class="card-body">
                <div class="row mb3">
                    <label class="form-label">Durum Adı</label>
                    <input class="form-control" asp-for="Name" placeholder="Lütfen durum adı giriniz" required />
                </div>

            </div>
            <div class="card-footer text-center">
                <button type="submit" class="btn btn-primary">Ekle</button>
                <button type="reset" class="btn btn-secondary">Temizle</button>
            </div>
        </div>
    </form>

</div>


